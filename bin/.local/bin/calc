#!/usr/bin/env python3
# ------------------------------------------------------------------
# Author: Rolv Apneseth
# Description:
#   Simple command line tool which evaluates and prints some Python code,
#   used to run simple calculations.
# ------------------------------------------------------------------

from argparse import ArgumentParser

# ARGUMENT(S) ---------------------------------------------------------------------------
parser = ArgumentParser(
    description="Simple command line tool which evaluates and prints some Python code,"
    " used to run simple calculations."
)

parser.add_argument("code", type=str, help="Block of code to be evaluated")

args = parser.parse_args()

# OUTPUT --------------------------------------------------------------------------------
print(eval(args.code))
