#!/usr/bin/env bash
########################################################################################
# AUTHOR: Rolv-Apneseth (https://github.com/Rolv-Apneseth)
# LICENSE: MIT
########################################################################################
# CONSTANTS
REPO="https://github.com/Rolv-Apneseth/.dotfiles.git"
DOTFILES="$HOME/.dotfiles"
STOW_FOLDERS=(
    "bin"
    "general"
    "theming"
    "qtile"
    "kitty"
    "starship"
    "neofetch"
    "rofi"
    "nvim"
    "thunar"
    "dunst"
)
########################################################################################
# MAIN
function main(){
    arguments "$@"

    check_dotfiles

    pushd "$DOTFILES" > /dev/null || exit

    # Install vs Uninstall
    action="install"; command="--restow"
    if [ "$uninstall" = true ]
    then
        action="uninstall"; command="--delete"
    fi

    # Restow or unstow folders depending on options above
    echo
    echo "Begin ${action}ing dotfiles"
    echo
    for folder in "${STOW_FOLDERS[@]}" 
    do
        stow "$command" "$folder/"
    done
    echo
    echo "Finished ${action}ing dotfiles"
    echo

    popd > /dev/null || exit
}
########################################################################################
# PARSE ARGS
function arguments(){
    # Transform long options to short ones
    for arg in "$@";
    do
      shift
      case "$arg" in
        "--help") set -- "$@" "-h" ;;
        "--uninstall") set -- "$@" "-D" ;;
        *)        set -- "$@" "$arg"
      ;; esac
    done

    # Default behaviour
    uninstall=false

    # Parse arguments
    while getopts "hD" opt
    do
      case "$opt" in
        "h") help; exit 0 ;;
        "D") uninstall=true ;;
        "?") help >&2; exit 1 ;;
      esac
    done
}
########################################################################################
# CHECK DOTFILES
function check_dotfiles(){
    if [ ! -d "$DOTFILES" ]
    then
        echo "Dotfiles directory not found. Cloning repo $REPO"
        git clone "$REPO" "$DOTFILES"
        echo "Dotfiles repo cloned"
    fi
}
########################################################################################
# HELP
function help(){
    echo
    echo "usage: dotfiles [-h] [-D]"
    echo
    echo "A command line tool used for managing dotfile configuration with the use of GNU Stow"
    echo
    echo "options:"
    echo "   -h, --help     show this help message and exit"
}
########################################################################################
# ARGUMENTS


main "$@"
