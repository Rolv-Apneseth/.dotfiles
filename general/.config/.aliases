#!/bin/env sh
# SKETCHY -------------------------------------------------------------------------------
# (If there's a problem look here first)
alias ls='eza -1la --icons --color=always --group-directories-first --hyperlink'
alias delta="delta --hyperlinks --hyperlinks-file-link-format='file://{path}#{line}'"

alias cp='cp -vi'
alias mv='mv -vi'
alias df='df -h'
alias yeet='rm -vrf'
alias rm='rm -v'

alias se='sudoedit'

# TOOLS ---------------------------------------------------------------------------------
alias p="paru"
alias pR="paru -Rcns"
alias pS="paru -S"
alias update="archnews --unread || sudo pacman --needed -Sy archlinux-keyring && paru -Syu"

alias nvim="env TERM=wezterm nvim"
alias n="nvim"
alias lg="lazygit"
alias mc="macchina"
alias js="just"

alias cargo-clean-all="fd 'Cargo.toml' -x cargo clean --manifest-path {}"

# Avoid $HOME/.wget-hsts file
alias wget=wget --hsts-file='$XDG_DATA_HOME/wget-hsts'
# Avoid $HOME/.yarnrc file
alias yarn='yarn --use-yarnrc $XDG_CONFIG_HOME/yarn/config'

# NAVIGATION ----------------------------------------------------------------------------
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
